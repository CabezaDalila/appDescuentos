rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios pueden leer/escribir sus propias membresías
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Membresías del usuario
      match /memberships/{membershipId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Cloud Functions pueden leer/escribir en todas las colecciones
    match /{document=**} {
      allow read, write: if false; // Las funciones usan admin SDK, no estas reglas
    }
  }
}
